# Staging Environment Configuration
ENVIRONMENT=staging
COMPOSE_PROJECT_NAME=crm_staging

# Database Configuration
POSTGRES_DB=crm_staging_db
POSTGRES_USER=crm_staging_user
POSTGRES_PASSWORD=CHANGE_THIS_STAGING_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5433

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6380

# JWT Configuration (generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_THIS_TO_SECURE_STAGING_JWT_SECRET_AT_LEAST_64_CHARACTERS_LONG

# Application Ports (different from dev to avoid conflicts)
FRONTEND_PORT=3001
API_GATEWAY_PORT=8001

# Service Ports
USER_SERVICE_PORT=8091
HR_SERVICE_PORT=8092
LEAD_SERVICE_PORT=8093
CALL_SERVICE_PORT=8094
CAMPAIGN_SERVICE_PORT=8095
INTEGRATION_SERVICE_PORT=8096
NOTIFICATION_SERVICE_PORT=8097
BILLING_SERVICE_PORT=8098
REPORTING_SERVICE_PORT=8099
CUSTOMER_ADMIN_SERVICE_PORT=8100

# PgAdmin (Optional)
PGADMIN_EMAIL=admin@staging.crm.local
PGADMIN_PASSWORD=CHANGE_THIS_PGADMIN_PASSWORD
PGADMIN_PORT=5051

# Application Environment
SPRING_PROFILES_ACTIVE=staging
NODE_ENV=staging

# API URL for Frontend (update with your staging domain)
VITE_API_URL=http://staging.yourcompany.com:8001

# Logging Level
LOG_LEVEL=INFO

# Staging Settings
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
