# Production Environment Configuration
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=crm_production

# Database Configuration
POSTGRES_DB=crm_production_db
POSTGRES_USER=crm_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_VERY_SECURE_PRODUCTION_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5434

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6381

# JWT Configuration (MUST CHANGE - generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_THIS_TO_EXTREMELY_SECURE_PRODUCTION_JWT_SECRET_MINIMUM_64_CHARS

# Application Ports (production ports)
FRONTEND_PORT=80
API_GATEWAY_PORT=8002

# Service Ports
USER_SERVICE_PORT=8101
HR_SERVICE_PORT=8102
LEAD_SERVICE_PORT=8103
CALL_SERVICE_PORT=8104
CAMPAIGN_SERVICE_PORT=8105
INTEGRATION_SERVICE_PORT=8106
NOTIFICATION_SERVICE_PORT=8107
BILLING_SERVICE_PORT=8108
REPORTING_SERVICE_PORT=8109
CUSTOMER_ADMIN_SERVICE_PORT=8110

# PgAdmin (Optional - consider disabling in production)
PGADMIN_EMAIL=admin@production.crm.local
PGADMIN_PASSWORD=CHANGE_THIS_SECURE_PGADMIN_PASSWORD
PGADMIN_PORT=5052

# Application Environment
SPRING_PROFILES_ACTIVE=production
NODE_ENV=production

# API URL for Frontend (update with your production domain)
VITE_API_URL=https://api.yourcompany.com

# Logging Level
LOG_LEVEL=WARN

# Production Settings
ENABLE_SWAGGER=false
ENABLE_DEBUG=false

# Backup Configuration
BACKUP_RETENTION_DAYS=30
ENABLE_AUTO_BACKUP=true

# Monitoring (if using external monitoring)
# PROMETHEUS_ENABLED=true
# GRAFANA_ENABLED=true

# SSL/TLS (if terminating SSL at container level)
# SSL_ENABLED=true
# SSL_CERT_PATH=/path/to/cert
# SSL_KEY_PATH=/path/to/key
