# Development Environment Configuration
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=crm_development

# Database Configuration
POSTGRES_DB=crm_dev_db
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration (use a simple key for dev)
JWT_SECRET=development-jwt-secret-key-that-is-long-enough-for-hs512-algorithm-at-least-64-chars

# Application Ports (standard development ports)
FRONTEND_PORT=3000
API_GATEWAY_PORT=8000

# Service Ports
USER_SERVICE_PORT=8081
HR_SERVICE_PORT=8082
LEAD_SERVICE_PORT=8083
CALL_SERVICE_PORT=8084
CAMPAIGN_SERVICE_PORT=8085
INTEGRATION_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
BILLING_SERVICE_PORT=8088
REPORTING_SERVICE_PORT=8089
